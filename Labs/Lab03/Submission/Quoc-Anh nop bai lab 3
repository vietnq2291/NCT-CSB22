#BT1
Input_Number = int (input("Input number: "))
if Input_Number % 2 == 0:
    print(Input_Number, "is even")
else:
    print(Input_Number, "is odd")
    
#BT2
Input_number = float (input("Input number: "))
if Input_number // 1 == 0:
    print (Input_number; "is an integer")
else:
    print (Input_number, "is not an integer")
    
#BT3
Input_character = input ("Input character: ")
if Input_character .isdigit():
    print (Input_character, "is a digit")
else:
    print (Input_character, "is not a digit")
    
#BT4
Input_num = int (input("Input number: "))
if Input_num % 3 == 0 and Input_num % 5 == 0:
    print (Input_num, "is divisible by 3 and 5")
if Input_num % 3 == 0 and Input_num  % 5 != 0:
    print (Input_num, "is divisible by 3")
if Input_num  % 3 != 0 and Input_num % 5 == 0:
    print (Input_num, "is divisible by 5")
else: 
    print (Input_num, "is not divisible by 3 or 5")

#BT5
print ("Welcome to the Ultimate Security System")
Name = input ("Username: ")
Pass = input ("Password: ")
if Name == "admin" and Pass == "12345":
    print ("You are logged in, admin.")
else:
    print ("Wrong username or password")

#BT6
a = float (input("Insert length 1: "))
b = float (input("Insert length 2: "))
c = float (input("Insert length 3: "))
if a + b > c and b + c > a and c + a > b:
    print ("The 3 line segments can form a triangle")
else:
    print ("The 3 line segments cannot form a triangle")
    
#BT7
from turtle import *
t = turtle.Turtle()
d = float (input("Insert length 1: "))
e = float (input("Insert length 2: "))
f = float (input("Insert length 3: "))
if d + e <= f and e + f <= d and f + d <= e:
    print ("")    
elif d*d + e*e == f*f or d*d + f*f == e*e or e*e + f*f == d*d:
    print ("The 3 line segments can form a right triangle")
elif d == e == f:
    t.print ("THe 3 line segments can form an equilateral triangle")
    t.forward (d/2)
    t.left (120)
    t.forward (d)
    t.left (120)
    t.forward (d)
    t.left (120)
    t.forward (d/2)
else:
    print ("The 3 line segments can form a triangle")
    
    
